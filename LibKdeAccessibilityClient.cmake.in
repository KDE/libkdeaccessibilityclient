get_filename_component(_LIBKDEACCESSIBILITYCLIENT_CURRENT_DIR  "${CMAKE_CURRENT_LIST_FILE}" PATH)

if(NOT WIN32)
# This is needed on non-win32 platforms, as lib-install-dir might be in a
# totally different prefix than include-install-dir. So instead hardcode the
# absolute path during buildtime
set( LIBKDEACCESSIBILITYCLIENT_INCLUDE_DIR "@INCLUDE_INSTALL_DIR@/libkdeaccessibilityclient" )

else(NOT WIN32)

set( LIBKDEACCESSIBILITYCLIENT_INCLUDE_DIR "${_LIBKDEACCESSIBILITYCLIENT_CURRENT_DIR}/../../../include/libkdeaccessibilityclient" )

endif(NOT WIN32)

macro( _libkdeaccessibilityclient_set_lib_vars _prefix _lib )
  set( LIBKDEACCESSIBILITYCLIENT_${_prefix}_LIBRARIES LibKdeAccessibilityClientImport__${_lib} )
endmacro( _libkdeaccessibilityclient_set_lib_vars )

_libkdeaccessibilityclient_set_lib_vars( LIBKDEACCESSIBILITYCLIENT libkdeaccessibilityclient )


mark_as_advanced(
    LIBKDEACCESSIBILITYCLIENT
)
